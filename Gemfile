# Indicar onde o Ruby deve buscar as Gems do projeto
source "http://rubygems.org"

# Instrução para que o Ruby consiga baixar e utilizar a gem
gem 'cucumber', '~> 9.2'
gem 'capybara', '~> 3.40'
gem 'selenium-webdriver', '~> 4.27'
gem 'rspec', '~> 3.13'
gem 'site_prism', '~> 5.0', '>= 5.0.4'
# Após pegar os arquivos das gems, rodar o comando 'bundler install'

# Rodar o comando 'cucumber --init'
# Serão criadas pastas e arquivos, dentro da pasta 'support', no arquivo 'env.rb' é necessário importar as gems para o código
# Sempre importar as gems no arquivo 'env.rb'